<div class="sliding-menu js-sliding-menu">
  <div class="main-mobile-menu">
    <nav>
      {{#each @root.mainMenu}}
        <a href="{{this.url}}" class="{{this.isActive}} {{this.isHighlighted}}">
          <svg viewBox="0 0 24 24" class="icon">
            <use href="{{this.icon}}"></use>
          </svg>
          <span class="name">{{this.name}}</span>
          <svg viewBox="0 0 74 10" class="arrow">
            <use href="#arrow"></use>
          </svg>
        </a>
      {{/each}}
    </nav>
  </div>
</div>
